{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "$*": ["src/*"],
      "$electron/*": ["electron/*"]
    }
  },
  "include": ["src/**/*", "electron/**/*"]
}
